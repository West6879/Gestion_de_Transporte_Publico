<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="visual.BusquedaRutaController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Búsqueda de Rutas Óptimas" textFill="#00467B">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>

                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Estación Origen:" textFill="#00467B"/>
                                <ComboBox fx:id="cmbOrigen" prefWidth="200.0"/>
                            </children>
                        </VBox>

                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Estación Destino:" textFill="#00467B"/>
                                <ComboBox fx:id="cmbDestino" prefWidth="200.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnRutaCorta" mnemonicParsing="false" onAction="#buscarRutaMasCorta" prefHeight="35.0" prefWidth="180.0" text="Ruta Más Corta" style="-fx-background-color: #00467B; -fx-text-fill: white;"/>
                        <Button fx:id="btnMenosCambios" mnemonicParsing="false" onAction="#buscarMenosCambios" prefHeight="35.0" prefWidth="180.0" text="Menos Cambios" style="-fx-background-color: #0066cc; -fx-text-fill: white;"/>
                        <Button fx:id="btnRutaRapida" mnemonicParsing="false" onAction="#buscarRutaRapida" prefHeight="35.0" prefWidth="180.0" text="Ruta Más Rápida" style="-fx-background-color: #0088cc; -fx-text-fill: white;"/>
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnRutaBarata" mnemonicParsing="false" onAction="#buscarRutaBarata" prefHeight="35.0" prefWidth="180.0" text="Ruta Más Barata" style="-fx-background-color: #00aaff; -fx-text-fill: white;"/>
                        <Button fx:id="btnMatrizDistancias" mnemonicParsing="false" onAction="#mostrarMatrizDistancias" prefHeight="35.0" prefWidth="180.0" text="Matriz Distancias" style="-fx-background-color: #00ccff; -fx-text-fill: white;"/>
                        <Button fx:id="btnSimularEvento" mnemonicParsing="false" onAction="#simularEvento" prefHeight="35.0" prefWidth="180.0" text="Simular Evento" style="-fx-background-color: #ff6600; -fx-text-fill: white;"/>
                    </children>
                </HBox>

                <TextArea fx:id="txtResultado" prefHeight="300.0" prefWidth="660.0" style="-fx-control-inner-background: #ffffff; -fx-border-color: #00467B; -fx-border-width: 2;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>